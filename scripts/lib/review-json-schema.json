{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/anthropics/comparison-pomodoro-todo/review-output-schema",
  "title": "Code Review Output Schema",
  "description": "JSON schema for code review outputs compatible with REVIEW-PROMPT.md format",
  "type": "object",
  "required": [
    "findings",
    "overall_correctness",
    "overall_explanation"
  ],
  "properties": {
    "findings": {
      "type": "array",
      "description": "Array of review findings/issues discovered in the code",
      "items": {
        "type": "object",
        "required": [
          "title",
          "body",
          "priority",
          "confidence_score"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short title/summary of the finding",
            "minLength": 1,
            "maxLength": 200
          },
          "body": {
            "type": "string",
            "description": "Detailed explanation of the finding",
            "minLength": 1
          },
          "priority": {
            "type": "integer",
            "description": "Priority level: 0=Critical (P0), 1=High (P1), 2=Medium (P2), 3=Low (P3)",
            "enum": [0, 1, 2, 3]
          },
          "confidence_score": {
            "type": "number",
            "description": "Confidence in the finding (0.0 = not confident, 1.0 = very confident)",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "code_location": {
            "type": "object",
            "description": "Location in the codebase where the issue exists",
            "properties": {
              "absolute_file_path": {
                "type": "string",
                "description": "Absolute path to the file"
              },
              "line_range": {
                "type": "object",
                "description": "Line range of the code location",
                "properties": {
                  "start": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Starting line number"
                  },
                  "end": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Ending line number"
                  }
                },
                "required": ["start"]
              }
            }
          },
          "security_metadata": {
            "type": "object",
            "description": "Security-specific metadata (for security reviews)",
            "properties": {
              "cwe": {
                "type": "integer",
                "description": "CWE (Common Weakness Enumeration) number",
                "minimum": 1
              },
              "cvss_score": {
                "type": "number",
                "description": "CVSS v3.1 score (0.0-10.0)",
                "minimum": 0.0,
                "maximum": 10.0
              },
              "owasp_category": {
                "type": "string",
                "description": "OWASP Top 10 category (e.g., A01:2021)",
                "pattern": "^A[0-9]{2}:20[0-9]{2}$"
              },
              "severity": {
                "type": "string",
                "description": "Security severity level",
                "enum": ["Critical", "High", "Medium", "Low", "Info"]
              }
            }
          }
        }
      }
    },
    "overall_correctness": {
      "type": "string",
      "description": "Overall assessment of the code correctness",
      "enum": [
        "patch is correct",
        "patch is incorrect",
        "needs review"
      ]
    },
    "overall_explanation": {
      "type": "string",
      "description": "Summary explanation of the overall assessment",
      "minLength": 1,
      "maxLength": 1000
    },
    "overall_confidence_score": {
      "type": "number",
      "description": "Overall confidence in the review (0.0 = not confident, 1.0 = very confident)",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.8
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the review",
      "properties": {
        "reviewer": {
          "type": "string",
          "description": "Name of the AI reviewer (claude, codex, etc.)"
        },
        "review_type": {
          "type": "string",
          "description": "Type of review conducted",
          "enum": ["comprehensive", "security", "quality", "enterprise"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of the review"
        },
        "commit": {
          "type": "string",
          "description": "Git commit hash that was reviewed"
        }
      }
    }
  }
}
